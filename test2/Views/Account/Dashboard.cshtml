        font-family: Arial, sans-serif;
        padding: 20px;
    }

    /* Style pour les paragraphes */
    p {
        margin-bottom: 10px;
    }

    /* Style pour les liens des bulletins de soin */
    .bulletin-link {
        color: blue;
        text-decoration: none;
        cursor: pointer;
    }

