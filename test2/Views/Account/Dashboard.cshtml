            text-decoration: underline;
        }

    /* Style pour la liste des bulletins de soin */
    ul {
        list-style-type: none;
        padding: 0;
    }

    /* Style pour chaque bulletin de soin */
    li {
        margin-bottom: 5px;
    }

    /* Style pour le formulaire de déconnexion */
    input[type="submit"] {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

</style>


<body>
    @if (Model != null && Model.Adherent != null)
    {<p>Matricule Adhérent: @Model.Adherent.idAdherent</p>

    <p>Nom de l'adhérent: @Model.Adherent.nomAdh</p>
    <p>Prénom de l'adhérent: @Model.Adherent.prenomAdh</p>
    

    <h3>Bulletins de soin:</h3>
    <ul>
        @foreach (var bulletin in Model.BulletinSoin)
        {
            <div>
            <li>
                <a href="#" class="bulletin-link" data-bulletin-id="@bulletin.idBs">ID du bulletin: @bulletin.idBs</a>
            </li>
            <li data-bulletin-pres="@bulletin.idPrestataire">Code Prestataire: @bulletin.idPrestataire</li>

            </div>
        }
    </ul>

    @Html.BeginForm("Logout", "Account", FormMethod.Post)
    {
        <input type="submit" value="Déconnexion" />
    }
}

else
{
    <p>Aucun adhérent trouvé.</p>
}
</body>

<script>
    // Ajoutez un écouteur d'événements pour chaque lien de bulletin
    var bulletinLinks = document.querySelectorAll('.bulletin-link');
    bulletinLinks.forEach(function (link) {
        link.addEventListener('click', function (event) {
            event.preventDefault(); // Empêche le lien de suivre le lien

            // Récupère l'ID du bulletin à partir de l'attribut de données
            var bulletinId = this.getAttribute('data-bulletin-id');

            // Récupère l'ID du prestataire à partir de l'attribut de données
            var prestataireId = this.parentElement.nextElementSibling.getAttribute('data-bulletin-pres');

            // Affiche l'ID du prestataire
            alert('ID du prestataire: ' + prestataireId + ' associé au bulletin: ' + bulletinId);
        });
    });
</script>



